<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
      }

      h1 {
        color: #333;
        text-align: center;
      }

      .container {
        max-width: 1200px;
        width: 100%;
        margin: auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
      }

      .form-container {
        margin-bottom: 20px;
      }

      label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
      }

      input[type="text"] {
        width: calc(100% - 22px);
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }

      button {
        width: 25%;
        margin: 0 auto;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        font-size: 16px;
        display: block;
        left: 50%;
      }

      button:hover {
        background-color: #0056b3;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        table-layout: fixed;
      }

      th,
      td {
        padding: 10px;
        border: 1px solid #ccc;
        text-align: left;
        word-wrap: break-word;
      }

      th {
        background-color: #5e6165;
        color: #fff;
      }

      tr:nth-child(even) {
        background-color: #f9f9f9;
      }

      .url-generated {
        text-align: center;
        font-size: 18px;
        margin-bottom: 20px;
        color: #007bff;
        font-weight: bold;
      }

      @media (max-width: 600px) {
        .container {
          padding: 15px;
        }

        label,
        button {
          font-size: 14px;
        }

        input[type="text"] {
          padding: 8px;
        }

        th,
        td {
          padding: 8px;
        }
      }
    </style>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
  </head>
  <body>
    <div class="container">
      <h1>URL Shortener</h1>
      <% if (locals.id) { %>
      <p class="url-generated">
        URL Generated: https://urlshortener-ngnj.onrender.com/url/<%= id %>
      </p>
      <% } %>

      <div class="form-container">
        <form method="POST" action="/url">
          <label>Enter Your Original URL</label>
          <input
            type="text"
            name="url"
            placeholder="https://example.com"
            id=""
          />
          <button type="submit ">Generate</button>
        </form>
      </div>

      <div class="table-container">
        <% if (locals.urls) { %>
        <table>
          <thead>
            <tr>
              <th>S. No</th>
              <th>Short ID</th>
              <th>Redirect</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= url.shortId %></td>
              <td><%= url.redirectURL %></td>
              <td><%= url.visitHistory.length %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
    </div>
  </body>
</html>